# Huly Instance Configuration
HULY_URL=https://your-huly-instance.com
HULY_TRANSACTOR_URL=wss://your-huly-instance.com/_transactor
HULY_ACCOUNT_URL=https://your-huly-instance.com/_accounts

# Bot Authentication (use token OR email+password)
HULY_EMAIL=bot@example.com
HULY_PASSWORD=your-password
HULY_TOKEN=                    # Pre-generated workspace token (optional, overrides email/password)
HULY_WORKSPACE_ID=             # Workspace ID (required if using token)
HULY_SOCIAL_ID=                # Bot's social ID for message attribution (required if using token)

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen3-coder:latest

# Bot Behavior
BOT_PERSONALITY=chaotic-helpful    # Options: chaotic-helpful, curious, productive, silly
ACTION_INTERVAL_MS=5000            # How often to check for new messages (ms)
MAX_ACTIONS_PER_MINUTE=10          # Rate limit
